# Import required packages
import matplotlib as mpl
import matplotlib.pyplot as plt
import matplotlib.font_manager as fm
import numpy as np
from pylab import cm

# Import data
x_sol1, y_sol1 = np.loadtxt('Absorption of crystal violet/Solution_1_E3.csv', unpack=True, delimiter=';', skiprows=1)
x_sol2, y_sol2 = np.loadtxt('Absorption of crystal violet/Solution_2_E3.csv', unpack=True, delimiter=';', skiprows=1)
x_sol3, y_sol3 = np.loadtxt('Absorption of crystal violet/Solution_3_E3.csv', unpack=True, delimiter=';', skiprows=1)
x_sol4, y_sol4 = np.loadtxt('Absorption of crystal violet/Solution_4_E3.csv', unpack=True, delimiter=';', skiprows=1)

# choose font
mpl.rcParams['font.family'] = 'Arial'
mpl.rcParams["axes.linewidth"] = 1.5

# create figure
fig = plt.figure(figsize=(5,5), linewidth=8)
ax = fig.add_subplot(111)

# choose axis limits
ax.set_xlim(-10, 750)
ax.set_ylim(-0.05, 0.7)

# choose tick sizes
ax.xaxis.set_tick_params(which='major', size=8, width=1.5, direction='in', top='on')
ax.xaxis.set_tick_params(which='minor', size=5, width=1, direction='in', top='on')
ax.yaxis.set_tick_params(which='major', size=8, width=1.5, direction='in', right='on')
ax.yaxis.set_tick_params(which='minor', size=5, width=1, direction='in', right='on')

# choose tick intervals
ax.xaxis.set_major_locator(mpl.ticker.MultipleLocator(100))
ax.xaxis.set_minor_locator(mpl.ticker.MultipleLocator(50))
ax.yaxis.set_major_locator(mpl.ticker.MultipleLocator(0.1))
ax.yaxis.set_minor_locator(mpl.ticker.MultipleLocator(0.05))

ax.tick_params(axis='x', labelsize=15)
ax.tick_params(axis='y', labelsize=15)

# label axes
ax.set_xlabel('seconds', fontsize=15)
ax.set_ylabel('Absorption', fontsize=15)
ax.set_title("Absorption of crystal violet", fontsize = 15)

# plot data
ax.plot(x_sol1, y_sol1, linewidth=2, color='darkcyan', label='Solution 1', marker='o', markersize=3)
ax.plot(x_sol2, y_sol2, linewidth=2, color='darkseagreen', label='Solution 2', marker='o', markersize=3)
ax.plot(x_sol3, y_sol3, linewidth=2, color='slateblue', label='Solution 3', marker='o', markersize=3)
ax.plot(x_sol4, y_sol4, linewidth=2, color='mediumvioletred', label='Solution 4', marker='o', markersize=3)

# plot legend
ax.legend(bbox_to_anchor=(1, 1), loc=2, frameon=False, fontsize=16)

fig.savefig('Absorption of crystal violet/fig1', bbox_inches='tight', dpi=400)